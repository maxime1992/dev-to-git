{
  "name": "dev-to-git",
  "version": "0.0.0-development",
  "description": "A CLI to keep your dev.to posts in sync from a GIT project, using the CI provider of your choice",
  "keywords": [
    "dev.to"
  ],
  "source": "src/index.ts",
  "main": "bin/dev-to-git.umd.js",
  "module": "bin/dev-to-git.es5.js",
  "typings": "bin/types/dev-to-git.d.ts",
  "files": [
    "bin",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "bin": {
    "dev-to-git": "bin/dev-to-git.umd.js"
  },
  "author": "Maxime Robert <maxime.robert1992@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxime1992/dev-to-git.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "prettier:base": "yarn run prettier \"./{src,test}/**/*.ts\" \"./**/*.{yml,md,json}\"",
    "prettier:fix": "yarn run prettier:base --write",
    "prettier:check": "yarn run prettier:base --check",
    "lint": "tslint  --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf bin",
    "build": "tsc --module commonjs && parcel build",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --coverage",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.5",
    "@commitlint/config-conventional": "17.6.5",
    "@types/jest": "29.5.2",
    "@types/minimist": "1.2.2",
    "@types/node": "18.16.0",
    "colors": "1.4.0",
    "commitizen": "4.3.0",
    "coveralls": "3.1.1",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-config": "29.5.0",
    "lint-staged": "13.2.2",
    "lodash.camelcase": "4.3.0",
    "parcel": "2.9.2",
    "prettier": "^1.14.3",
    "prompt": "1.3.0",
    "replace-in-file": "7.0.1",
    "rimraf": "5.0.1",
    "semantic-release": "21.0.5",
    "shelljs": "0.8.5",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tslint-config-standard": "9.0.0",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "commander": "11.0.0",
    "dotenv": "16.2.0",
    "front-matter": "4.0.2"
  }
}
