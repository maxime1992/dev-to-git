{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "composite": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "types": ["jest", "node", "@types/jest"],
    "sourceMap": true,
    "resolveJsonModule": true,
    // https://github.com/sindresorhus/got/issues/2267#issuecomment-1582075262
    "paths": {
      "~/*": ["./src/*"],
      "got": ["./node_modules/got/dist/source"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["package.json", "./src/**/*", "./tests/**/*"]
}
